<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarStyle">@style/hideViewStyle</item>
    </style>

    <style name="hideViewStyle">
        <item name="android:visibility">@integer/view_gone</item>
    </style>

    <style name="expandedToolbarText">
        <item name="android:textColor">@color/colorFullOpacity</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="collapsedToolbarText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="LaunchDetailsSubCaptionText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LaunchDetailsCardView">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
    </style>

</resources>
