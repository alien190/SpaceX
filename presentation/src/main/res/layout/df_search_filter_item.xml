<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="SearchFilterItemBinding">

        <variable
            name="vm"
            type="com.example.ivanovnv.spacex.launchSearchFilter.ILaunchSearchFilterViewModel" />

        <variable
            name="scopeName"
            type="String" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип ракеты:" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bind:canChoice="@{vm.canChoice}"
            bind:filterItemSource="@{vm.listRocketNames}"
            bind:onItemClickListener="@{vm}"
            bind:scopeName="@{scopeName}" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Год запуска:" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bind:canChoice="@{vm.canChoice}"
            bind:filterItemSource="@{vm.listLaunchYears}"
            bind:onItemClickListener="@{vm}"
            bind:scopeName="@{scopeName}" />


        <android.support.design.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.onOkButtonClick()}"
            android:text="ok"
            android:visibility="@{vm.canChoice ? View.VISIBLE : View.GONE}" />

    </LinearLayout>


</layout>