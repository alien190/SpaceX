<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_mission_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_margin="2dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_rocket_stub"
        app:layout_constraintTop_toTopOf="@id/cl_title" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/layout_margin"
         />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/guideline">

        <!--<TextView-->
            <!--android:id="@+id/tv_flight_number_hint"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/flight_number"-->
            <!--android:textAlignment="center"/>-->

        <!--<TextView-->
            <!--android:id="@+id/tv_flight_number"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textStyle="bold"-->
            <!--app:layout_constraintStart_toEndOf="@id/tv_flight_number_hint" />-->


        <!--<TextView-->
            <!--android:id="@+id/tv_mission_name_hint"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/mission_name"-->
            <!--app:layout_constraintTop_toBottomOf="@id/tv_flight_number_hint" />-->

        <TextView
            android:id="@+id/tv_mission_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Mission 1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textAlignment="center"
            />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_rocket_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:text="@string/rocket_name"
        app:layout_constraintLeft_toLeftOf="@id/cl_title"
        app:layout_constraintTop_toBottomOf="@id/cl_title" />

    <TextView
        android:id="@+id/tv_rocket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_rocket_name_hint"
        app:layout_constraintTop_toTopOf="@id/tv_rocket_name_hint" />

    <TextView
        android:id="@+id/tv_launch_date_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_date_utc"
        app:layout_constraintLeft_toLeftOf="@id/cl_title"
        app:layout_constraintTop_toBottomOf="@id/tv_rocket_name_hint" />

    <TextView
        android:id="@+id/tv_launch_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_launch_date_hint"
        app:layout_constraintTop_toTopOf="@id/tv_launch_date_hint" />


</android.support.constraint.ConstraintLayout>
